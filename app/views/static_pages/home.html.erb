<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t("static_pages.welcome") %></h1>
  <h2>
    <%= t("static_pages.home_this_the") %>
    <a href="http://www.railstutorial.org/"><%= t("static_pages.rubytutorial") %></a>
    <%= t("static_pages.home_sample_application") %>
  </h2>
  <%= link_to t("static_pages.signupnow"), "/signup", class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: t("static_pages.logo_rails")),
  "http://rubyonrails.org/" %>
<% end %>
